#!/bin/bash

##
# tflint
# ======
# tflint をインストールしてなくても docker から tflint を叩きたい人用
#
# Usage:
#   tflint
#
# Requirements:
#   - docker

BIN_DIR=$(
  cd $(dirname ${0})
  pwd
)
ROOT_DIR=$(dirname ${BIN_DIR})
TF_DIR="${ROOT_DIR}/terraform"

docker run --rm \
  -v ${TF_DIR}:/terraform \
  tfsec/tfsec:latest /terraform
